<?xml version="1.1"?>
<config>
	<global>
		<models>
            <quickview>
                <class>Sm_Quickview_Model</class>
            </quickview>
        </models>
		<blocks>
            <quickview>
                <class>Sm_Quickview_Block</class>
            </quickview>            		
        </blocks>				
		<helpers>
            <quickview>
                <class>Sm_Quickview_Helper</class>
            </quickview>
        </helpers>
        <resources>
        	<slider_setup>
        		<setup>
        			<module>Sm_Quickview</module>
        		</setup>
        	</slider_setup>
        </resources>
	</global>
	<frontend>
        <routers>
			<quickview>
                <use>standard</use>
                <args>
                    <module>Sm_Quickview</module>
                    <frontName>quickview</frontName>
                </args>
            </quickview>
        </routers>
		<layout>
            <updates>
                <quickview module="Sm_Quickview">
					<file>sm/quickview.xml</file>
                </quickview>
            </updates>
        </layout>
        <translate>
      		<modules>
          		<Sm_Quickview>
                     <files>
                          <default>Sm_Quickview.csv</default>
                     </files>
                </Sm_Quickview>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
        <translate>
      		<modules>
          		<Sm_Quickview>
                     <files>
                          <default>Sm_Quickview.csv</default>
                     </files>
                </Sm_Quickview>
            </modules>
        </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>										
										<quickview translate="title" module="quickview">
											<title>SM Quickview Settings</title>
										</quickview>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<default>
        <quickview>
            <general>
                <enable>1</enable>
				<item_class></item_class>
                <image_position>4</image_position>
				<popup_width>75%</popup_width>
				<popup_height>90%</popup_height>
            </general>		
        </quickview>
    </default>
</config>